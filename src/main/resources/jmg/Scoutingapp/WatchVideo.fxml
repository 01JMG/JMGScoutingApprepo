<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.media.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="jmg.scoutingapp.WatchVideoController"
            prefWidth="800" prefHeight="600"
            stylesheets="@watchvideo.css">

    <top>
        <Label text="Watch Player Videos"
               styleClass="header-label"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10" alignment="CENTER">
            <ListView fx:id="videoListView" prefHeight="200" prefWidth="400"/>
            <MediaView fx:id="mediaView" fitWidth="600" fitHeight="400"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Play" onAction="#handlePlay"/>
                <Button text="Pause" onAction="#handlePause"/>
                <Button text="Stop" onAction="#handleStop"/>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <Button text="Back to Menu"
                onAction="#handleBackToMenu"
                styleClass="back-button"
                BorderPane.alignment="CENTER"/>
    </bottom>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>
