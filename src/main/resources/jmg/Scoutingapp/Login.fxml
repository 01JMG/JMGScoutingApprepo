<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="jmg.Login.LoginController"
      spacing="15" alignment="CENTER" styleClass="root-pane"
      stylesheets="@login.css">

    <Label text="Scouting App Login" styleClass="title-label"/>

    <TextField fx:id="usernameField" promptText="Username" styleClass="input-field"/>
    <PasswordField fx:id="passwordField" promptText="Password" styleClass="input-field"/>

    <Button text="Login" onAction="#handleLogin" styleClass="login-button"/>

    <Label fx:id="statusLabel" text="" styleClass="status-label"/>
</VBox>
