<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
            fx:controller="jmg.Controllers.AddPlayerToSystemController"
            fitToWidth="true" fitToHeight="true"
            stylesheets="@addplayertosystem.css">

    <content>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 20;">
            
            <Label text="Add Player to System" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

            <TextField fx:id="nameField" promptText="Enter Player Name"/>
            <TextField fx:id="dateofBithFiel" promptText="Enter Player Date of Birth"/>
            <TextField fx:id="weightField" promptText="Enter Player Weight"/>
            <TextField fx:id="raceField" promptText="Enter Player Race"/>
            <TextField fx:id="birthPlaceField" promptText="Enter Country of Birth"/>
            <TextField fx:id="appIdField" promptText="Enter App Registration ID"/>

            <Button text="Add Player" onAction="#handleAddPlayer"/>

            <Button fx:id="Back"
                    text="Back to Menu"
                    prefWidth="150"
                    onAction="#handleBackToMenu" />

            <ImageView fx:id="profilePicView" fitHeight="150" fitWidth="150"
                       pickOnBounds="true" preserveRatio="true"/>
            <Button text="Add Profile Picture" onAction="#handleAddProfilePic"/>

            <ImageView fx:id="backgroundPicView" fitHeight="200" fitWidth="600"
                       pickOnBounds="true" preserveRatio="true"/>
            <Button text="Add Background Picture" onAction="#handleAddBackgroundPic"/>

            <Label fx:id="statusLabel" textFill="green"/>

        </VBox>
    </content>
</ScrollPane>
