<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="jmg.scoutingapp.CreateActualMatchStatsReportController">

    <top>
        <Label text="Actual Match Stats" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 10;"
               alignment="center"/>
    </top>

    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <content>
                <GridPane hgap="10" vgap="8">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints percentWidth="40"/>
                        <ColumnConstraints percentWidth="60"/>
                    </columnConstraints>

                    <Label text="Player Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="playerNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Non-Penalty Goals:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="nonPenaltyGoalsArea" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="npxG:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="npxGPer90Area" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Shots Total:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="shotsTotalPer90Area" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Assists:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextField fx:id="assistsPer90Area" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="xAG:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <TextField fx:id="xAGPer90Area" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                    <Label text="npxG + xAG:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <TextField fx:id="npxGPlusxAGPer90Area" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                    <Label text="Shot-Creating Actions:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                    <TextField fx:id="scaPer90Area" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                    <Label text="Passes Attempted:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                    <TextField fx:id="passesAttemptedPer90Area" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                    <Label text="Pass Completion %:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                    <TextField fx:id="passCompletionPercentageArea" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

                    <Label text="Progressive Passes:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                    <TextField fx:id="progressivePassesPer90Area" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

                    <Label text="Progressive Carries:" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
                    <TextField fx:id="progressiveCarriesPer90Area" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

                    <Label text="Successful Take-Ons:" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
                    <TextField fx:id="successfulTakeOnsPer90Area" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

                    <Label text="Touches (Att Pen):" GridPane.rowIndex="13" GridPane.columnIndex="0"/>
                    <TextField fx:id="touchesAttPenPer90Area" GridPane.rowIndex="13" GridPane.columnIndex="1"/>

                    <Label text="Progressive Passes Rec:" GridPane.rowIndex="14" GridPane.columnIndex="0"/>
                    <TextField fx:id="progressivePassesRecPer90Area" GridPane.rowIndex="14" GridPane.columnIndex="1"/>

                    <Label text="Tackles:" GridPane.rowIndex="15" GridPane.columnIndex="0"/>
                    <TextField fx:id="tacklesPer90Area" GridPane.rowIndex="15" GridPane.columnIndex="1"/>

                    <Label text="Interceptions:" GridPane.rowIndex="16" GridPane.columnIndex="0"/>
                    <TextField fx:id="interceptionsPer90Area" GridPane.rowIndex="16" GridPane.columnIndex="1"/>

                    <Label text="Blocks:" GridPane.rowIndex="17" GridPane.columnIndex="0"/>
                    <TextField fx:id="blocksPer90Area" GridPane.rowIndex="17" GridPane.columnIndex="1"/>

                    <Label text="Clearances:" GridPane.rowIndex="18" GridPane.columnIndex="0"/>
                    <TextField fx:id="clearancesPer90Area" GridPane.rowIndex="18" GridPane.columnIndex="1"/>

                    <Label text="Aerials Won:" GridPane.rowIndex="19" GridPane.columnIndex="0"/>
                    <TextField fx:id="aerialsWonPer90Area" GridPane.rowIndex="19" GridPane.columnIndex="1"/>
                </GridPane>
            </content>
        </ScrollPane>
    </center>

    <bottom>
        <HBox spacing="15" alignment="center" style="-fx-padding: 10;">
            <Button text="Save Report" onAction="#handleSave"/>
            <Button text="Clear Form" onAction="#handleClear"/>
        </HBox>
    </bottom>
</BorderPane>