<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:controller="jmg.scoutingapp.ReplyCommentsController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/20">

    <!-- Title -->
    <Label text="Reply to Comments" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

    <!-- List of comments -->
    <ListView fx:id="commentsList" prefHeight="300" VBox.vgrow="ALWAYS"/>

    <!-- Reply input -->
    <HBox spacing="10">
        <TextField fx:id="replyField" promptText="Write your reply..." HBox.hgrow="ALWAYS"/>
        <Button text="Reply" onAction="#handleReply"/>
    </HBox>

</VBox>

