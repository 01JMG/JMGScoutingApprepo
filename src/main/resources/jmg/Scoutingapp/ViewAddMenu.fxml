<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.Circle?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="jmg.MenuControllers.ViewAddMenuController"
            prefWidth="400" prefHeight="500"
            hbarPolicy="AS_NEEDED"
            vbarPolicy="AS_NEEDED"
            styleClass="scroll-pane"
            stylesheets="@viewaddmenu.css">

    <AnchorPane fx:id="rootPane" prefWidth="800" prefHeight="600">



        <!-- Menu buttons VBox -->
        <VBox fx:id="menuBox"
              spacing="15"
              layoutX="50"
              layoutY="50"
              prefWidth="300"
              alignment="CENTER">

            <Button fx:id="addPlayerButton" text="Add Player" onAction="#handleAddPlayer" />
            <Button fx:id="viewPlayersButton" text="View Players in System" onAction="#handleViewPlayers" />
            <Button fx:id="comparePlayersButton" text="Compare Player Stats" onAction="#handleCompareStats"/>
            <Button fx:id="uploadVideoButton" text="Upload Video" onAction="#handleUploadVideo"/> 
            <Button fx:id="watchVideoButton" text="Watch Video" onAction="#handleWatchVideo"/>
            <Button fx:id="createuserButton" text="Create Account" onAction="#handleCreateUser"/>  
            <Button fx:id="Onetoonetext" text="Text Another" onAction="#handleOneToOnetext"/>
            <Button fx:id="scoutreport" text="Scout Report" onAction="#handleScoutReport"/>
            <Button fx:id="displayAnalysisArea" text="Display Analysis" onAction="#handleDisplayAnalysis"/> 
            <Button fx:id="viewtonfieldbutton" text="View Posts" onAction="#handleViewOnTheField"/>
            <Button fx:id="postonthefieldButton" text="Make Post" onAction="#handlePostOnTheField"/> 
            <Button fx:id="highlightsButton" text="HighLights" onAction="#handleHighLights"/> 
            <Button fx:id="recruitscourButton" text="Recruit Scout" onAction="#handleRecruitScout"/>
            <Button fx:id="followButton" text="Follow" onAction="#handleFollowController"/>  

        </VBox>

    </AnchorPane>
</ScrollPane>
