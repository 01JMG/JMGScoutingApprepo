<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Priority?>

<VBox fx:id="chatContainer" fx:controller="jmg.scoutingapp.OneToOneTextController"
      xmlns:fx="http://javafx.com/fxml/1" stylesheets="@onetoonetext.css">
    
    <TextArea fx:id="chatArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
    
    <HBox spacing="5" alignment="CENTER_LEFT">
        <TextField fx:id="inputField" HBox.hgrow="ALWAYS" promptText="Type a message..." onAction="#handleSend" />
        <Button fx:id="sendButton" text="Send" onAction="#handleSend" />
    </HBox>
    
</VBox>