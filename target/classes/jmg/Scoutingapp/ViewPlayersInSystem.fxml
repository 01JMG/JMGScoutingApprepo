<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="jmg.scoutingapp.ViewPlayersInSystemController"
            prefWidth="800" prefHeight="600">
    <children>
        <TableView fx:id="playersTable" layoutX="20" layoutY="20" prefWidth="760" prefHeight="500" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="120">
                    <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="dobColumn" text="Date of Birth" prefWidth="120">
                    <cellValueFactory><PropertyValueFactory property="dateOfBirth" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="weightColumn" text="Weight" prefWidth="80">
                    <cellValueFactory><PropertyValueFactory property="weight" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="raceColumn" text="Race" prefWidth="80">
                    <cellValueFactory><PropertyValueFactory property="race" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="birthPlaceColumn" text="Birth Place" prefWidth="120">
                    <cellValueFactory><PropertyValueFactory property="birthPlace" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="appIdColumn" text="App ID" prefWidth="80">
                    <cellValueFactory><PropertyValueFactory property="appId" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="profilePicColumn" text="Profile Pic" prefWidth="140">
                    <cellValueFactory><PropertyValueFactory property="profilePicPath" /></cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>

        <Label fx:id="statusLabel" layoutX="20" layoutY="540" prefWidth="760" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />

        <Button fx:id="Back" text="Back to Menu" layoutX="20" layoutY="560" onAction="#handleBackToMenu" />
    </children>
</AnchorPane>