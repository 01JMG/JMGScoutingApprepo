<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="jmg.Controllers.PostOnTheFieldController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    
    <Label text="Post on the Field" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TextField fx:id="agentIdField" promptText="Agent ID"/>
    <TextArea fx:id="contentArea" promptText="What's happening?" prefRowCount="3"/>
    <TextField fx:id="tagsField" promptText="Tags (comma-separated)"/>

    <!-- File chooser for media -->
    <HBox spacing="10" alignment="CENTER">
        <Button text="Choose Image/Video" onAction="#handleChooseMedia"/>
        <Label fx:id="mediaLabel" text="No file selected" style="-fx-text-fill: gray;"/>
    </HBox>

    <Button text="Post" onAction="#handleCreatePost"
            style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

    <Label text="Recent Posts:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
    <ListView fx:id="postsList" prefHeight="200"/>
</VBox>
