<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml" fx:controller="jmg.Controllers.RecruitScoutController">
    <HBox spacing="10">
        <TextField fx:id="searchField" promptText="Search scout..." />
        <Button text="Search" onAction="#searchScouts"/>
    </HBox>
    
    <TableView fx:id="scoutTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name"/>
            <TableColumn fx:id="skillColumn" text="Skill"/>
            <TableColumn fx:id="locationColumn" text="Location"/>
            <TableColumn fx:id="successRateColumn" text="Success %"/>
        </columns>
    </TableView>
    
    <Button text="Show Stats" onAction="#showScoutStats"/>
    <TextArea fx:id="scoutStatsArea" editable="false" prefHeight="150"/>
</VBox>
